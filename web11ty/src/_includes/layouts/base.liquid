<!doctype html>
<html lang='it'>
  <head>
    <meta charset='UTF-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1.0'>
    <meta name='generator' content='{{ eleventy.generator }}'>
    <meta property='og:title' content='{{title}}'>
    <meta property='og:description' content='{{site.description}}'>
    <link rel='stylesheet' href='{{ '/css/styles.css' | url }}'>
    <title>{{ site.title }}</title>
    <link
      rel='icon'
      href='{{ '/images/icon-144.png' | url }}'
      type='image/png'
    >
    {% block header %}{% endblock %}
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"></script>
  </head>
  <body>
      <header class='pt-4 {% if preventMarginBottom != true %}mb-6{% endif %}'>
        <div class='mx-auto my-0 w-10/12 max-w-6xl align-center mb-2 flex flex-col space-y-4  md:flex-row md:space-x-4 md:space-y-0'>
          <div class='flex flex-1 justify-between space-x-4'>
            <div>
              {% if linkHome %}<a href='/' class='text-2xl font-bold'>{% endif %}
              <div class='md:max-w-[300px]'>
                <img src='/images/logo-simple.png' alt='Il logo del club'>
              </div>
              <h1 class='text-center text-2xl md:text-4xl'>
                {{ site.title }}
              </h1>
              {% if linkHome %}</a>{% endif %}
              <p class='hidden md:block'>{{ site.subtitle }}</p>
            </div>
            <div class='ml-auto flex flex-col justify-around space-y-4  md:flex-row md:space-x-2 md:space-y-0'>
              <a
                href='http://www.fipsas.it/'
                target='_blank'
                rel='noopener noreferrer'
              >
                <div class='max-w-[120px]'>
                  <img
                    class='header-static-image'
                    src='/images/fipsaslogo.png'
                    alt='FIPSAS logo'
                    loading='eager'
                    placeholder='none'
                    width='{120}'
                  >
                </div>
              </a>
              <a
                href='http://www.cmas.org/'
                target='_blank'
                rel='noopener noreferrer'
              >
                <div class='max-w-[120px]'>
                  <img
                    class='header-static-image'
                    src='/images/cmas.png'
                    alt='CMAS logo'
                    loading='eager'
                    placeholder='none'
                    width='{120}'
                  >
                </div>
              </a>
            </div>
          </div>

          <div class='flex items-center space-x-4 md:flex-col md:space-x-0'>
            <div class='font-sm'>Seguici su</div>
            <div class='flex space-x-4'>
              <a
                href='https://www.facebook.com/clubsubnettuno'
                target='_blank'
                rel='noopener noreferrer'
                class='text-blue-nettuno'
              >
                {% include 'icon_facebook.liquid' %}
              </a>
              <a
                href='https://www.instagram.com/clubsubnettuno/'
                target='_blank'
                rel='noopener noreferrer'
                class='text-blue-nettuno'
              >
                {% include 'icon_instagram.liquid' %}
              </a>
            </div>
          </div>
        </div>
        {% include 'menu.liquid' %}
        {% if hideHeaderImages != true %}
          {% include 'header_image.liquid' %}
        {% endif %}
      </header>
      <main  class="min-h-screen md:flex">
        <div  class="flex-1">
        {% block content %}
          {{ content }}
        {% endblock %}
      </div>
      </main>
         <footer  class="mt-4 bg-stone-800 py-8 text-white">
      <div class="column">
        <div  class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
          <div>
            <h3  class="mb-4 text-xl">Sul sito</h3>
            <Navigation />
          </div>
          <div>
            <h3  class="mb-4 text-xl">Vieni a trovarci</h3>
            <address  class="not-italic text-white">
              Associazione Sportiva Dilettantistica
              <br />
              c/o piscina Stadio "Carmen Longo"
              <br />
              accesso da via dello Sport 6<br />
              Bologna
              <br />
              tel. 
              <a href="tel://051 6153552"  class="text-inherit underline">
                051 6153552
              </a>
              <br />
              C.F. 01596311207
              <br />
              P.IVA 2665601205
            </address>
          </div>
          <div>
            <h3  class="mb-4 text-xl">Seguici sui social</h3>
            <div class='flex space-x-4'>
              <a
                href='https://www.facebook.com/clubsubnettuno'
                target='_blank'
                rel='noopener noreferrer'
                class='text-white'
              >
                {% include 'icon_facebook.liquid' %}
              </a>
              <a
                href='https://www.instagram.com/clubsubnettuno/'
                target='_blank'
                rel='noopener noreferrer'
                class='text-white'
              >
                {% include 'icon_instagram.liquid' %}
              </a>
            </div>
          </div>
        </div>

        <div  class="my-4 text-sm">
          &copy; Club Sub Nettuno - {{ site.curYear }}
        </div>
      </div>
    </footer>
      {% block footer %}{% endblock %}
  </body>
</html>
